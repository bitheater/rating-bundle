                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Bitheater\RatingBundle\Model\Vote" repository-class="Bitheater\RatingBundle\Repository\Doctrine\ORMRepository">

        <field name="voterId" column="voterId" type="integer" />

        <field name="value" column="value" type="integer" />

        <field name="resourceId" column="resourceId" type="integer" />

        <field name="resourceKey" column="resourceKey" type="string" />

        <field name="createdAt" column="createdAt" type="datetime" />

    </mapped-superclass>

</doctrine-mapping>
